<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<meta name="generator" content="MODX file generated with PP MODX Creator by tumba25 (online version)"/>
		<license><![CDATA[http://opensource.org/licenses/gpl-license.php GNU General Public License v2]]></license>
		<title lang="en"><![CDATA[Favicon 1.0.2]]></title>
		<description lang="en"><![CDATA[This MOD allows you to add a favicon to be displayed on browsers.]]></description>
		<author-group>
			<author>
				<username><![CDATA[Nidhal]]></username>
			</author>
			<author>
				<username><![CDATA[randomessence]]></username>
				<homepage><![CDATA[https://github.com/randomessence/favicon_mod]]></homepage>
			</author>
		</author-group>
		<mod-version>1.0.2</mod-version>
		<installation>
			<level>easy</level>
			<time>180</time>
			<target-version>3.0.11</target-version>
		</installation>
		<link-group>
			<link type="template" href="subsilver2.xml" lang="en">subsilver2.xml</link>
			<link type="language" href="en_us.xml" lang="en">en_us</link>
		</link-group>
	</header>
	<action-group>
		<copy>
			<file from="root/*.*" to="*.*"/>
		</copy>
		<open src="includes/functions.php">
			<edit>
				<find><![CDATA[		'SITE_DESCRIPTION'				=> $config['site_desc'],]]></find>
				<action type="after-add"><![CDATA[// START Favicon_mod
	if (empty($config['favicon'])) 
	{
	set_config('favicon', 'favicon.ico', false);
	}
// END 	Favicon_mod]]></action>
			</edit>
			<edit>
				<find><![CDATA[		'SITENAME'						=> $config['sitename'],]]></find>
				<action type="before-add"><![CDATA[		'FAVICON'						=> $config['favicon'],]]></action>
			</edit>
		</open>
		<open src="includes/acp/acp_board.php">
			<edit>
				<find><![CDATA[						'legend2'				=> 'ACP_LOAD_SETTINGS',]]></find>
				<action type="before-add"><![CDATA[						'favicon'				=> array('lang' => 'FAVICON_URL',			'validate' => 'string',	'type' => 'text:40:255', 'explain' => false),]]></action>
			</edit>
		</open>
		<open src="language/en/acp/board.php">
			<edit>
				<find><![CDATA[	'JAB_USERNAME_EXPLAIN'		=> 'Specify a registered username or a valid JID. The username will not be checked for validity. If you only specify a username, then your JID will be the username and the server you specified above. Else, specify a valid JID, for example user@jabber.org.',]]></find>
				<action type="after-add"><![CDATA[// Startx favicon_mod
	'FAVICON_URL'				=> 'favicon',
	'FAVICON_URL_EXPLAIN'		=> 'You can enter a relative path, so the mod will assume the files is in your forum root, or a full URL.',
// End favicon_mod]]></action>
			</edit>
		</open>
		<open src="styles/prosilver/template/overall_header.html">
			<edit>
				<find><![CDATA[<title>{SITENAME} &bull; <!-- IF S_IN_MCP -->{L_MCP} &bull; <!-- ELSEIF S_IN_UCP -->{L_UCP} &bull; <!-- ENDIF -->{PAGE_TITLE}</title>]]></find>
				<action type="after-add"><![CDATA[<!-- IF FAVICON --><link rel="shortcut icon" href="{ROOT_PATH}{FAVICON}" type="image/x-icon" /><!-- ENDIF -->]]></action>
			</edit>
		</open>
		<diy-instructions lang="en"><![CDATA[Don't forget to purge your cache.]]></diy-instructions>
	</action-group>
</mod>
